<li id="event-<%= event.id %>">
  <span class="user">
  	<%= link_to event.title, event %>
  </span>
	<span class="content">
		<p><%= event.description %></p>
		Date: <%= event.event_date.in_time_zone("Chennai").strftime("%d-%m-%Y") %><br>
		<h4>Event by: <%= link_to event.creator.name, event.creator %> </h4>
	</span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(event.created_at) %> ago.
  </span>
</li>