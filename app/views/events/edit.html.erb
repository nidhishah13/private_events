<% provide(:title, 'Update Event') %>
<h1>Update Event</h1>

<script>
  $( function() {
    $( "#date" ).datetimepicker({  
         minDate:new Date()
      });
  } );
</script>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@event) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>

        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>

        <%= f.label :date %>
        <%= f.text_field :event_date, class: 'form-control', id: 'date', 
                                  data: { date_format: 'YYYY/MM/DD hh:mm A'} %>
      </div>
      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
</div>
</div>