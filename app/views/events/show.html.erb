<% provide(:title, @event.title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render @event %>
      <% if current_user?(@event.creator) %>
        <%= link_to "Edit Event", edit_event_path %>
      <% end %>  
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'attend_form' if logged_in? %>
    <ul>
      <% if @event.attendees.any? %>
        <h3>  <%= @event.attendees.count %> </h3>
        <h3>Attendees: </h3>
        <% @event.attendees.each do |attendee|%>
          <%= link_to attendee.name, attendee%>
        <% end %>
      <% else %>
        No Attendees
      <% end %>
    </ul>
  </div>
</div>