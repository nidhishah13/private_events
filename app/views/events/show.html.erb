<% provide(:title, @event.title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h3><%= @event.title %></h3>
      <h1> Date: <%= @event.event_date%></h1>
      <h1><%= @event.description %></h1>
      <h1>Created by: <%= link_to @event.creator.name, @event.creator %> </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @event.attendees.any? %>
      <h3>  <%= @event.attendees.count %> </h3>
      <h3>Attendees: </h3>
      <% @event.attendees.each do |attendee|%>
        <%= link_to attendee.name, attendee%>
      <% end %>
    <% else %>
      No Attendees
    <% end %>
  </div>
</div>